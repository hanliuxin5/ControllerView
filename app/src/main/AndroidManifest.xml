<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lychee.controllerview">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".PlusApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".dev.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".dev.WeexControllerActivity">
            <intent-filter>
                <action android:name="android.scheme.controller" />
                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:pathPattern=".*\\.js"
                    android:scheme="http" />
                <data
                    android:pathPattern=".*\\.js"
                    android:scheme="https" />
            </intent-filter>
        </activity>
    </application>

</manifest>